num=int(input("Enter a number:"))
temp=num
count=0
while temp>0:
    count=count+1
    temp=temp//10
sum=0
temp=num
while temp>0:
    rem=temp%10
    sum=sum+pow(rem,count)
    temp=temp//10
if(num == sum):
    print("The number",num,"ia a Armstrong number" )
else:
    print("The number",num,"is not a Armstrong number")


